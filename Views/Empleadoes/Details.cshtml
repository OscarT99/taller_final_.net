@model taller_final_cruds.Models.Empleado

@{
    ViewData["Title"] = "Details";
}


<h1 class="pb-2 mb-0 text-center">Detalles</h1>


<h4 class="pb-2 mb-0 text-center">Empleado</h4>
    <hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

    <dl class="row">
            <dt class="col-sm-2 pt-2">
            Cédula
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2 pt-2">
            Nombre
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
            <dt class="col-sm-2 pt-2">
           Apellido
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
            <dt class="col-sm-2 pt-2">
            Valor/Hora
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.ValorHora)
        </dd>
            <dt class="col-sm-2 pt-2">
            Correo
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Email)
        </dd>
            <dt class="col-sm-2 pt-2">
            Télefono
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
            <dt class="col-sm-2 pt-2">
            Ciudad
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
            <dt class="col-sm-2 pt-2">
            Dirección
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
            <dt class="col-sm-2 pt-2">
            Fecha ingreso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
            <dt class="col-sm-2 pt-2">
            Estado
        </dt>
                <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

<div>
    <small class="d-block text-end mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.IdEmpleado">Editar</a>
    </small>
    <small class="d-block text-end  mt-3">
        <a asp-action="Index">Volver</a>
    </small>
</div>

</div>
</div>
</div>
