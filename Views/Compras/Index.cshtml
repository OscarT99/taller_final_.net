@model IEnumerable<taller_final_cruds.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1 class="border-bottom pb-2 mb-0 text-center">Compras</h1>

<div class="d-flex text-muted pt-3">
    <form class="d-flex" asp-controller="Compras" asp-action="Index">
        <input class="form-control me-2" type="text" placeholder="Buscar" name="buscar" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
</div>

<div class="d-flex text-muted pt-3">
    <p class="pb-3 mb-0 lh-sm">
        <a asp-action="Create" class="btn btn-success">
            <svg xmlns="http://www.w3.org/2000/svg" height="1.25em" viewBox="0 0 448 512">
                <style>
                    svg {
                        fill: #ffffff
                    }
                </style>
                <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c-17.7 0-32-14.3-32-32s14.3-32-32-32H256V80z" />
            </svg> <b>Crear</b>
        </a>
    </p>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Proveedor</th>
                <th>Contacto</th>
                <th>Factura</th>
                <th>Fecha de compra</th>
                <th>Fecha de registro</th>
                <th>Subtotal</th>
                <th>Iva</th>
                <th>Total</th>
                <th>Estado</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Proveedor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contacto)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumeroFactura)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaDeCompra)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td>@Html.DisplayFor(modelItem => item.Subtotal)</td>
                    <td>@Html.DisplayFor(modelItem => item.Iva)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValorTotal)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                   
                    <td>
                        <a asp-action="Details" asp-route-id="@item.IdCompra" class="btn btn-primary text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1.25em" viewBox="0 0 512 512">
                                <style>
                                    svg {
                                        fill: #ffffff
                                    }
                                </style>
                                <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336h24V272H216c-13.3 0-24-10.7-24-24s10.7-24 24-24h48c13.3 0 24 10.7 24 24v88h8c13.3 0 24 10.7 24 24s-10.7 24-24 24H216c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
