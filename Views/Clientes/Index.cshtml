@model IEnumerable<taller_final_cruds.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="col-sm-12">
    <div class="home-tab">
        <div class="tab-content tab-content-basic">
            <div class="d-sm-flex align-items-center justify-content-between border-bottom">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <form asp-controller="Clientes" asp-action="Index">
                            <p>
                                Buscar: <input  type="text" name="buscar" class="form-group" />
                                @*<input type="submit" value="buscar" class="btn btn-sm btn-dark" />*@
                            </p>
                        </form>
                    </li>
                </ul>
                <div>
                    <a href="#" onclick="descargarExcel()" class="btn btn-success" style="background-color: #058143; color:aliceblue"><span class="mdi mdi-file-excel"></span>Excel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12 grid-margin stretch-card responsive">
    <div class="card">
        <div class="card-body">
            <div class="d-sm-flex align-items-center justify-content-between border-bottom">
                <div>
                    <h2 class="card-title">Clientes</h2>
                    <p class="card-description">Tabla de Registros</p>
                </div>                
                <a asp-action="Create" class="btn btn-success"
                        style="background-color:rgb(235, 232, 232); color:black">
                    <i class="mdi mdi-account-plus"></i>  Agregar Nuevo Cliente
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoCliente)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.TipoIdentificacion)
                            </th>*@
                            <th>
                                <a asp-action="Index" asp-route-filtrar="@ViewData["FiltroNumeroIdentificacion"]" />
                                @Html.DisplayNameFor(model => model.NumeroIdentificacion)
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-filtrar="@ViewData["FiltroRazonSocial"]" />
                                @Html.DisplayNameFor(model => model.RazonSocial)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.NombreComercial)
                            </th>*@
                            @*<th>
                                @Html.DisplayNameFor(model => model.Ciudad)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Contacto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th></th>
                        </tr>
                    </thead>            
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoCliente)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.TipoIdentificacion)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroIdentificacion)
                                </td>
                                <td>                                    
                                    @Html.DisplayFor(modelItem => item.RazonSocial)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.NombreComercial)
                                </td>*@
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Ciudad)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Contacto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td>
                                    <a asp-action="Edit"  asp-route-id="@item.IdCliente">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdCliente">Detalle</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdCliente">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>