@model taller_final_cruds.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1 class="pb-2 mb-0 text-center">Eliminar</h1>

<h3 class="pb-2 mb-0 text-center">¿Estás seguro de eliminarlo?</h3>

    <h4 class="pb-2 mb-0 text-center">Usuario</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Cédula
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class = "col-sm-2">
            Correo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
    </form>
        <small class="d-block text-end mt-3">
            <a asp-action="Index">Volver</a>
        </small>

    </div>
    </div>
