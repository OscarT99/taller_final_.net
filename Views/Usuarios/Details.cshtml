@model taller_final_cruds.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1 class="pb-2 mb-0 text-center">Detalles</h1>


    <h4 class="pb-2 mb-0 text-center">Usuario</h4>
    <hr />
    <div class="row justify-content-center">

        <div class="col-md-4">

        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cedula)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cedula)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <div>
            <small class="d-block text-end mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.IdUsuario">Editar</a>
            </small>
            <small class="d-block text-end mt-3">
                <a asp-action="Index">Volver</a>
            </small>

        </div>
        </div>

    </div>
    
