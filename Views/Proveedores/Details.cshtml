@model taller_final_cruds.Models.Proveedore

@{
    ViewData["Title"] = "Details";
}

<h1 class="pb-2 mb-0 text-center">Detalles</h1>


    <h4 class="pb-2 mb-0 text-center">Proveedor</h4>
    <hr />
    <div class="container">
<div class="row justify-content-center">

    <div class="col-md-9">
    <dl class="row">
            <dt class="col-sm-2 pt-2">
            Tipo de proveedor
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.TipoProveedor)
        </dd>
            <dt class="col-sm-2 pt-2">
            Tipo de identidad
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.TipoIdentificacion)
        </dd>
            <dt class="col-sm-2 pt-2">
            Nro. de identidad
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.NumeroIdentificacion)
        </dd>
            <dt class="col-sm-2 pt-2">
            Razón social
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.RazonSocial)
        </dd>
            <dt class="col-sm-2 pt-2">
            Nombre comercial
        </dt>
            <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.NombreComercial)
        </dd>
            <dt class="col-sm-2 pt-2">
            Ciudad
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
            <dt class="col-sm-2 pt-2">
            Dirección
        </dt>
            <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
            <dt class="col-sm-2 pt-2">
            Contacto
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
            <dt class="col-sm-2 pt-2">
            Télefono
        </dt>
            <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
            <dt class="col-sm-2 pt-2">
            Correo
        </dt>
        <dd class = "col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Email)
        </dd>
            <dt class="col-sm-2 pt-2">
            Estado
        </dt>
            <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

            <div class="row justify-content-center">
               
                <div class="form-group col-sm-4">

                    <a asp-action="Edit" asp-route-id="@Model?.IdProveedor" class="btn btn-warning">Editar</a>

                </div>

                <div class="col-sm-4">
                    <a class="btn btn-primary" asp-action="Index">Regresar </a>
                </div>

            </div>
</div>

</div>
</div>