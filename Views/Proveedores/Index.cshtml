@using X.PagedList.Mvc.Core;

@model X.PagedList.IPagedList<taller_final_cruds.Models.Proveedore>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="border-bottom pb-2 mb-0 text-center">Proveedores</h1>

    <div class="d-flex text-muted pt-3">
    <form class="d-flex" asp-controller="Proveedores" asp-action="Index">
        <input class="form-control me-2" type="text" placeholder="Buscar" name="buscar" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Buscar</button>
    </form>

    </div>

    <div class="d-flex text-muted pt-3">
    <p class="pb-3 mb-0 lh-sm">
        <a asp-action="Create" class="btn btn-success">
            <svg xmlns="http://www.w3.org/2000/svg" height="1.25em" viewBox="0 0 448 512">
                <style>
                    svg {
                        fill: #ffffff
                    }</style>
                <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z" />
            </svg> <b>Crear</b>
        </a>
    </p>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tipo de proveedor
                    </th>
                    <th>
                        Tipo de identidad
                    </th>
                    <th>
                        Nro. de identidad
                    </th>
                    <th>
                        Razón social
                    </th>
                    <th>
                    <a asp-action="Index" asp-route-filtrar="@ViewData["FiltroNombre"]">
                        Nombre comercial
                    </a>
                    </th>
                    <th>
                        Ciudad
                    </th>
                    <th>
                        Dirección
                    </th>
                    <th>
                       Contacto
                    </th>
                    <th>
                        Télefono
                    </th>
                    <th>
                       Correo
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                    <th></th>
                <th></th>
                </tr>
            </thead>
        <tbody class="table-group-divider">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoProveedor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoIdentificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroIdentificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RazonSocial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreComercial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contacto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-warning text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1.25em" viewBox="0 0 512 512">
                                <style>
                                    svg {
                                        fill: #ffffff
                                    }</style>
                                <path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
                            </svg> 
                                </a>
                        </td>
                        <td>
                        <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-primary text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1.25em" viewBox="0 0 512 512">
                                <style>
                                    svg {
                                        fill: #ffffff
                                    }</style>
                                <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336h24V272H216c-13.3 0-24-10.7-24-24s10.7-24 24-24h48c13.3 0 24 10.7 24 24v88h8c13.3 0 24 10.7 24 24s-10.7 24-24 24H216c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                            </svg> 
                                </a>
                        </td>
                        <td>
                        <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-danger text-light">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1.25em" viewBox="0 0 448 512">
                                <style>
                                    svg {
                                        fill: #ffffff
                                    }</style>
                                <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
                            </svg> 
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    <div class="pagination-container align-right">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, buscar = ViewData["Buscar"], filtro = ViewData["FiltroNombre"] }))
    </div>
    </div>

